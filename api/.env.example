# Frontend URL
ORIGIN_URL="http://localhost:3000"

# Neo4J Database Configuration
# Neo4J connection URI (e.g., neo4j://localhost:7687 or neo4j+s://xxx.databases.neo4j.io)
NEO4J_URI=neo4j://localhost:7687

# Neo4J authentication credentials
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here

# Neo4J database name (default: neo4j)
NEO4J_DATABASE=neo4j

# Debug Mode
DEBUG=False

# TTS Configuration
# Language code for Kokoro TTS (b=British English, a=American English)
TTS_LANG_CODE=b

# Default voice ID for TTS generation (bm_fable is British male narrator)
TTS_DEFAULT_VOICE=bm_fable

# Directory to cache generated audio files
TTS_CACHE_DIR=./audio_cache

# Audio sample rate (Hz) - Kokoro uses 24000 Hz
TTS_SAMPLE_RATE=24000

# Maximum text length for TTS generation (characters)
TTS_MAX_TEXT_LENGTH=5000

# Enable lazy loading of TTS model (loads on first request)
TTS_LAZY_LOAD=True

# Enabling TTS Generation (will be disabled and use static audio url from CDN in production)
TTS_ENABLED=True

# URL prefix for serving static audio files
STATIC_AUDIO_URL_PREFIX=/static/audio

# API Key String
API_KEY=your_api_key

# API Key validation, True if validation required, False otherwise
API_KEY_REQUIRED=True
